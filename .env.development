# Configurações de Banco de Dados Local (Docker)
# Este arquivo é seguro para ser commitado pois contém apenas credenciais de desenvolvimento local.

POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_USER=apexuser
POSTGRES_PASSWORD=apexpassword
POSTGRES_DB=apexfit_db

# Connection String para ferramentas que usam formato URL (Ex: Prisma, Node, etc)
DATABASE_URL=postgresql://apexuser:apexpassword@localhost:5433/apexfit_db

# Connection String para Java/Spring (JDBC)
JDBC_DATABASE_URL=jdbc:postgresql://localhost:5433/apexfit_db
